<div class="">
    <a href="{{ path ("_event", {eventId: event.id, page:"main" }) }}" class="nodecoration">
        <div class="module-title">
            {{ event.title }}
        </div>
    </a>
    <div class="row">
        <div class="col-md-2">
            <a href="{{ eventPhoto1( event ) }}" class="nodecoration" >
                <img src="{{ eventPhoto1( event ) }}" width="150" alt="" class="img-fluid">
            </a>
        </div>
        <div class="col-md-10">

            <div class="row">

                <div class="col-3">{{ event.user.name }}<br>{{ eventPhone(event) }}<br>{{ event.dateCreated|date("d-m-Y H:i") }}</div>
                <div class="col-3">{{ event.priority.name }}<br>{{ event.status.name }}</div>
                <div class="col-2">
                </div>
                <div class="col-2">
                </div>
                <div class="col-md-2 ">
                    <a href="{{ path ("_event", {eventId: event.id, page:"main" }) }}" class="nodecoration"><span class="btn btn-dark btn-block my-1">{{ "Szczegóły"|trans }}</span></a>
                </div>
            </div>
            <div class="row">
                <div class="col-12 py-3">
                    {{ event.description }}
                </div>
            </div>

            <div class="row ">
                {% if event.lastCommentUser %}
                    <div class="col-md-1 pt-2 border-top" >
                         <img src="{{ eventLastCommentUser( event ) }}" class="img-fluid" width="120" alt="">
                    </div>
                    <div class="col-md-9 pt-2 border-top"><div><small>{{ event.user.name }} {{ event.lastCommentDate|date("d-m-Y H:i")}}</small></div><div class="border bg-white">{{ event.lastCommentText }}</div></div>
                    <div class="col-md-2 ">
                        <a href="{{ path ("_event", {eventId: event.id, page:"addcomment" }) }}"><span class="btn btn-dark btn-block my-2">{{ "Dodaj Komentarz"|trans }}</span></a>
                    </div>
                {% else %}
                    <div class="col-md-1 pt-2"></div>
                    <div class="col-md-9 pt-2 border bg-white">Brak komentarzy</div>
                    <div class="col-md-2">
                        <a href="{{ path ("_event", {eventId: event.id, page:"addcomment" }) }}"><span class="btn btn-dark  my-2">{{ "Dodaj Komentarz"|trans }}</span></a>
                    </div>
                {% endif %}
            </div>

        </div>
    </div>


</div>
