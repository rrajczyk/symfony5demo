{% extends "layout_admin.html.twig" %}

{% block titletop %}
    {{ "Dodaj Wydarzenie"|trans }}
{% endblock %}

{% block content %}

{{ form_start(form) }}
    <div class="py-3 border-top border-bottom">
        {% include '/line_back_save_menu.html.twig' %}
    </div>

    <div class="module-title">
       {{ "Wydarzenie"|trans }}
    </div>

    <div class="pb-5">
        <div class="row my-4">
            <div class="col-4 text-right">
                {{ "Tytuł"|trans }}
            </div>
            <div class="col-8">
                {{ form_widget(form.title) }}
            </div>
        </div>

        <div class="row my-4">
            <div class="col-4 text-right">
                {{ "Opis"|trans }}
            </div>
            <div class="col-8">
                {{ form_widget(form.description) }}
            </div>
        </div>

        <div class="row my-4">
            <div class="col-4 text-right">
                {{ "Telefon"|trans }}
            </div>
            <div class="col-8">
                {{ form_widget(form.phone) }}
            </div>
        </div>

        <div class="row my-4">
            <div class="col-4 text-right">
                {{ "Użytkownik"|trans }}
            </div>
            <div class="col-8">
                {{ form_widget(form.user) }}
            </div>
        </div>

        <div class="row my-4">
            <div class="col-4 text-right">
                {{ "Zdjęcie"|trans }}
            </div>
            <div class="col-8">
                {{ form_errors (form.photo1) }}
                {{ form_widget(form.photo1) }}
            </div>
        </div>

        <div class="row my-4">
            <div class="col-4 text-right">
                {{ "Oceń ważność zlecenia"|trans }}
            </div>
            <div class="col-8">
                {{ form_widget(form.priority) }}
            </div>
        </div>
    </div>

    <div class="py-3 border-top border-bottom">
        {% include '/line_back_save_menu.html.twig' %}
    </div>
{{ form_end(form) }}

{% endblock %}
