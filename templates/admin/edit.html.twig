{% extends "layout_admin.html.twig" %}

{% block titletop %}
   {{ "Edycja"|trans }} {{ admin.name }}
{% endblock %}

{% block content %}

{{ form_start(form) }}

    <div class="py-3  border-bottom">
        <div class="row">
            <div class="col">
                <a href="javascript:history.back()"><span class="btn btn-dark">{{ "Powrót"|trans }}</span></a>
            </div>
            <div class="col">

            </div>
            <div class="col text-right">
                <button type="submit" class="btn btn-warning">{{ "Zapisz"|trans }}</button>
            </div>
        </div>
    </div>

    <div class="pb-5">
        <div class="row my-4">
            <div class="col">
                <div class="row my-4">
                    <div class="col-4 text-right">
                           {{ "Imię i nazwisko"|trans }}
                    </div>
                    <div class="col-8">
                          {{ form_widget(form.name) }}
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-4 text-right">
                           {{ "Adres"|trans }}
                    </div>
                    <div class="col-8">
                          {{ form_widget(form.address) }}
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-4 text-right">
                           {{ "Email"|trans }}
                    </div>
                    <div class="col-8">
                          {{ form_widget(form.emails) }}
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-4 text-right">
                           {{ "Telefon"|trans }}
                    </div>
                    <div class="col-8">
                          {{ form_widget(form.phone) }}
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-4 text-right">
                           {{ "Zmień Zdjęcie"|trans }}
                    </div>
                    <div class="col-8">
                            {{ form_errors (form.avatar) }}
                          {{ form_widget(form.avatar) }}
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-4 text-right">
                           {{ "Aktualne Zdjęcie"|trans }}
                    </div>
                    <div class="col-8 text-center">
                        <img src="{{ userAvatar( admin ) }}" class="img-fluid"   alt="">
                        <br>
                        {% if admin.avatarFilename %}
                            <a href="{{ path ("_admin_remove_avatar" , {admin: admin.id  } ) }}" class="nodecoration" onclick="return confirm('Na pewno skasować ?')">
                                <span class="btn btn-warning btn-block my-1">{{ "Skasuj"|trans }}</span>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="row my-4">
                    <div class="col-4 text-right">
                           {{ "Login"|trans }}
                    </div>
                    <div class="col-8">
                          {{ form_widget(form.username) }}
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-4 text-right">
                           {{ "Zmień Hasło"|trans }}
                    </div>
                    <div class="col-8">
                          {{ form_widget(form.pass.first) }}
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-4 text-right">
                           {{ "Powtórz Hasło"|trans }}
                    </div>
                    <div class="col-8">
                          {{ form_widget(form.pass.second) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="py-3 border-top border-bottom">
        <div class="row">
            <div class="col">
                <a href="javascript:history.back()"><span class="btn btn-dark">{{ "Powrót"|trans }}</span></a>
            </div>
            <div class="col">

            </div>
            <div class="col text-right">
                <button type="submit" class="btn btn-warning">{{ "Zapisz"|trans }}</button>
            </div>
        </div>
    </div>
{{ form_end(form) }}

{% endblock %}
